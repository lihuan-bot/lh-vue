{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2016",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true, // 允许通过es6引入commonjs
    "jsx": "preserve",
    "lib": ["ESNext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@lhvue/*": ["packages/*/src"]
    }
  }
}
